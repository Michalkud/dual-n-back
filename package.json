{
  "name": "dual-n-back",
  "version": "1.0.0",
  "description": "A web-based N-Back trainer that supports three difficulty tiers with offline-first architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=@dual-n-back/frontend",
    "dev:backend": "npm run dev --workspace=@dual-n-back/backend",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "build:shared": "npm run build --workspace=@dual-n-back/shared",
    "build:frontend": "npm run build --workspace=@dual-n-back/frontend",
    "build:backend": "npm run build --workspace=@dual-n-back/backend",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=@dual-n-back/frontend",
    "test:backend": "npm run test --workspace=@dual-n-back/backend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "db:generate": "npm run db:generate --workspace=@dual-n-back/backend",
    "db:push": "npm run db:push --workspace=@dual-n-back/backend",
    "db:studio": "npm run db:studio --workspace=@dual-n-back/backend",
    "db:migrate": "npm run db:migrate --workspace=@dual-n-back/backend",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install && npm run build:shared"
  },
  "keywords": [
    "dual-n-back",
    "cognitive-training",
    "working-memory",
    "web-app",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}